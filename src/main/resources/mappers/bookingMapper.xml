<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.bogus.spring.test.booking.dao.BookingDAO">

	<select id="selectBookingList" resultType="com.bogus.spring.test.booking.model.Booking">
		SELECT
			`id`
			, `name`
			, `headcount`
			, `day`
			, `date`
			, `phoneNumber`
			, `state`
			, `createdAt`
			, `updatedAt`
		FROM
			`booking`	
	</select>
	
	<delete id="deleteBooking" parameterType="int">
		DELETE FROM
			`booking`
		WHERE
			`id` = #{id}
	</delete>
	
	<insert id="insertBooking" parameterType="map">
		INSERT INTO 
			`booking`
		(
			`name`
			, `headcount`
			, `day`
			, `date`
			, `phoneNumber`
			, `state`
			, `createdAt`
			, `updatedAt`
		)
		VALUE	 
		(
			#{name}
			, #{headcount}
			, #{day}
			, #{date}
			, #{phoneNumber}
			, '대기중'
			, now()
			, now()
		)
	</insert>
	
	<select id="selectSearchBookingList" resultType="com.bogus.spring.test.booking.model.Booking"
	parameterType="String">
		SELECT
			`id`
			, `name`
			, `headcount`
			, `day`
			, `date`
			, `phoneNumber`
			, `state`
			, `createdAt`
			, `updatedAt`
		FROM
			`booking`	
		WHERE
			`name` = #{name}
		AND
			`phoneNumber` = #{phoneNumber}
	</select>
	
	<select id="selectCountSearchBookingList" parameterType="String" resultType="int">
		SELECT
			count(1)
		FROM
			`booking`	
		WHERE
			`name` = #{name}
		AND
			`phoneNumber` = #{phoneNumber}
	</select>

</mapper>


